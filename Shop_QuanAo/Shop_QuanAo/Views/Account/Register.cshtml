@model Shop_QuanAo.Models.NguoiDung
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<section class="section-content padding-y">
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Đăng ký tài khoản</h4></header>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
        <div class="row">
            <!-- Tên người dùng -->
            <div class="col-md-12">
                <label for="HoTen">Tên người dùng</label>
                @Html.TextBoxFor(model => model.HoTen, new { placeholder = "Tên người dùng", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>

            <!-- Email -->
            <div class="col-md-12">
                <label for="Email">Email</label>
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <!-- Mật khẩu -->
            <div class="col-md-12">
                <label for="MatKhau">Mật khẩu</label>
                @Html.PasswordFor(model => model.MatKhau, new { placeholder = "Mật khẩu", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>

            <!-- Xác nhận mật khẩu -->
            <div class="col-md-12">
                <label for="retypepassword">Xác nhận mật khẩu</label>
                @Html.Password("retypepassword", null, new { placeholder = "Xác nhận mật khẩu", @class = "form-control", id = "retypepassword" })
                @Html.ValidationMessage("retypepassword", "", new { @class = "text-danger" })
            </div>

            <!-- Số điện thoại -->
            <div class="col-md-12">
                <label for="SoDienThoai">Số điện thoại</label>
                @Html.TextBoxFor(model => model.SoDienThoai, new { placeholder = "Số điện thoại", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
            </div>

        </div>
                <br />
                <button type="submit" class="btn btn-success">Đăng ký</button>}
        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Bạn đã có tài khoản? <a href="/Account/Login">Đăng nhập</a></p>
    <br><br>
</section>