@model Shop_QuanAo.Models.SanPham

@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Xóa Sản Phẩm</h2>

<p>Bạn có chắc chắn muốn xóa sản phẩm <strong>@Model.TenSanPham</strong>?</p>

<form method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("QuanLySanPham", "Admin")" class="btn btn-secondary">Hủy</a>
</form>

