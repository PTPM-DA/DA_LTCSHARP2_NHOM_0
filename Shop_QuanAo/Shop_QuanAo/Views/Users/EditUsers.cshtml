@model Shop_QuanAo.Models.NguoiDung

@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-info text-white text-center py-4">
            <h3 class="mb-0"><i class="fa fa-user-edit me-2"></i>Chỉnh sửa thông tin cá nhân</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditUsers", "Users", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model => model.MaNguoiDung)
                @Html.HiddenFor(model => model.MaVaiTro) 
                @Html.HiddenFor(model => model.NgayTao) 

                <div class="row mb-4">
                    <div class="col-md-3 text-md-end text-muted fw-bold">Họ tên:</div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", placeholder = "Họ tên" })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3 text-md-end text-muted fw-bold">Email:</div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3 text-md-end text-muted fw-bold">Số điện thoại:</div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control", placeholder = "Số điện thoại" })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Mật khẩu -->
                <div class="row mb-4">
                    <div class="col-md-3 text-md-end text-muted fw-bold">Mật khẩu mới (nếu muốn thay đổi):</div>
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu mới" })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Xác nhận mật khẩu -->
                <div class="row mb-4">
                    <div class="col-md-3 text-md-end text-muted fw-bold">Xác nhận mật khẩu:</div>
                    <div class="col-md-9">
                        @Html.Password("retypepassword", null, new { @class = "form-control", placeholder = "Xác nhận mật khẩu", id = "retypepassword" })
                        @Html.ValidationMessage("retypepassword", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-success btn-lg px-5 py-3">
                        <i class="fa fa-save me-2"></i> Cập nhật thông tin
                    </button>
                </div>
            }
        </div>
    </div>
</div>
