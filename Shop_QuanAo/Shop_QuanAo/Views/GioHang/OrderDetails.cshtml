@model Shop_QuanAo.Models.DonHang

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2>Chi tiết đơn hàng</h2>
    <p>Mã đơn hàng: @Model.MaDonHang</p>
    <p>Ngày tạo: @(Model.NgayTao.HasValue ? Model.NgayTao.Value.ToString("dd/MM/yyyy") : "N/A")</p>
    <p>Trạng thái: @Model.TrangThaiDonHang</p>
    <p>Tổng tiền: @String.Format("{0:N0}", Model.TongTien) VNĐ</p>

    <h4>Danh sách sản phẩm:</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietDonHang)
            {
                <tr>
                    <td>@item.SanPham.TenSanPham</td>
                    <td>@String.Format("{0:N0}", item.DonGia) VNĐ</td>
                    <td>@item.SoLuong</td>
                    <td>@String.Format("{0:N0}", item.SoLuong * item.DonGia) VNĐ</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("OrderHistory", "GioHang")" class="btn btn-secondary">Quay lại lịch sử đơn hàng</a>
</div>
