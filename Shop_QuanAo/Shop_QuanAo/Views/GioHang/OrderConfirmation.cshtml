@model Shop_QuanAo.Models.DonHang
@{
    ViewBag.Title = "OrderConfirmation";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2>Thông tin Đơn hàng</h2>

    <h4>Đơn hàng #@Model.MaDonHang</h4>
    <p>Ngày tạo: @Model.NgayTao</p>
    <p>Trạng thái: @Model.TrangThaiDonHang</p>
    <p>Tổng tiền: @String.Format("{0:N0}", Model.TongTien) VNĐ</p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietDonHang)
            {
<tr>
    <td>@item.SanPham.TenSanPham</td>
    <td>@item.SoLuong</td>
    <td>@String.Format("{0:N0}", item.DonGia) VNĐ</td>
    <td>@String.Format("{0:N0}", item.SoLuong * item.DonGia) VNĐ</td>
</tr>            }
        </tbody>
    </table>

    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Trở về trang chủ</a>
</div>

